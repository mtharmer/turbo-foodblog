.navbar.navbar-expand-lg.bg-light
  .container-fluid
    .navbar-nav
      = link_to 'Home', root_path, class: 'nav-link'
      = link_to 'Recipes', recipes_path, class: 'nav-link'
      - if current_user.nil?
        = link_to 'Log In', new_user_session_path, method: :get, class: 'nav-link'
        = link_to 'Sign Up', new_user_registration_path, method: :get, class: 'nav-link'
      - else
        = button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link'
