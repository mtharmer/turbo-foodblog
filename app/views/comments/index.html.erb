<p style="color: green"><%= notice %></p>

<h1>Comments</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Show this comment", recipe_comment_url(@recipe, comment) %>
    </p>
  <% end %>
</div>

<%= link_to "New comment", new_recipe_comment_path(@recipe) %>
