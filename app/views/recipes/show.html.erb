<div class="container">
  <p style="color: green"><%= notice %></p>

  <%= render @recipe %>

  <div class="mt-2">
    <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-primary mr-2" %>
    <%= link_to "Back to recipes", recipes_path, class: "btn btn-secondary" %>

    <%= button_to "Delete Recipe", @recipe, method: :delete, class: "btn btn-danger mt-2" %>
  </div>
</div>
