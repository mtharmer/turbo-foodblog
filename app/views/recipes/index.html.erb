<div class="container">
  <p style="color: green"><%= notice %></p>

  <h1>Recipes</h1>

  <div id="recipes">
    <% @recipes.each do |recipe| %>
      <%= render recipe %>
      <p>
        <%= link_to "Show this recipe", recipe, class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
  <hr />

  <%= link_to "New recipe", new_recipe_path, class: "btn btn-primary mt-2" %>
</div>
